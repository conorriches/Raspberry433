#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('433mhz2:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
var io = app.io;
io.attach(server);


var allClients = [];
io.sockets.on('connection', function (socket) {
  console.log('Client connected on socked ID: ' + socket.id);

  /**
   * When a client reports a state change
   */
  socket.on('item-state-changed', function (location) {
    console.log("STATE-CHANGE");

    //TODO: update all other clients
    io.sockets.emit('refresh', "");
  });

  /**
   * Client is requesting the playlist
   */
  socket.on('request-playlist', function (data) {
    console.log("###### Playlist Requested");
    socket.emit("response-playlist","hello");
  });

  /**
   * When a projector disconnects, send a broadcast.
   */
  socket.on('disconnect', function (e) {
    io.sockets.emit('disconnect', "");
  });

});


/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);


io.on('connection', function (socket) {
  console.log("www got a connection")
});


/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
